Options +FollowSymLinks
RewriteEngine On
RewriteRule ^api/(.*)$ /mudpuppy/api.php/$1 [L,QSA]

# disable these conditions in production
RewriteCond %{REQUEST_URI} ^/errorlog$
RewriteRule (.*) %{REQUEST_URI}/ [R=301,L]
RewriteRule ^errorlog/(.+)$ /mudpuppy/errorlog/$1 [L,QSA]

RewriteCond %{REQUEST_URI} !^/errorlog/.
RewriteCond %{REQUEST_URI} !^/mudpuppy/errorlog/
RewriteCond %{REQUEST_URI} !^/mudpuppy/dataobjects/_updateDataObjects.php
#end disable for production

# these folders will be directly accessible without user authentication
RewriteCond %{REQUEST_URI} !^/(js|css|fonts|html|images)/
RewriteCond %{REQUEST_URI} !^/(favicon.ico|robots.txt)$

#RewriteCond %{REQUEST_URI} !^/[0-9]+/      ????
RewriteCond %{REQUEST_URI} !^/mudpuppy/api.php/
RewriteCond %{REQUEST_URI} !^/index.php/
RewriteRule ^(.*)$ index.php/$1 [L,QSA]
